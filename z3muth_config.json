{
  "version": "1.0.0-ZENITH",
  "core": {
    "max_concurrent_scans": 50,
    "default_timeout": 300,
    "max_memory_usage": 0.8,
    "max_cpu_usage": 0.9
  },
  "tools": {
    "nuclei": {
      "enabled": true,
      "path": "nuclei",
      "flags": [
        "-silent",
        "-severity",
        "low,medium,high,critical"
      ],
      "timeout": 600
    },
    "subfinder": {
      "enabled": true,
      "path": "subfinder",
      "flags": [
        "-all",
        "-recursive"
      ],
      "timeout": 300
    },
    "httpx": {
      "enabled": true,
      "path": "httpx",
      "flags": [
        "-silent",
        "-title",
        "-tech-detect"
      ],
      "timeout": 180
    }
  },
  "wordlists": {
    "directories": [
      "wordlists/",
      "/usr/share/wordlists/"
    ],
    "subdomains": "wordlists/subdomains.txt",
    "directories_web": "wordlists/directories.txt",
    "common_files": "wordlists/common-files.txt"
  },
  "payloads": {
    "directories": [
      "payloads/",
      "wordlists/payloads/"
    ],
    "xss": "payloads/xss-payloads.txt",
    "sqli": "payloads/sql-injection.txt",
    "lfi": "payloads/lfi-payloads.txt",
    "rce": "payloads/rce-payloads.txt"
  },
  "reporting": {
    "output_dir": "z3muth_reports",
    "formats": [
      "html",
      "json",
      "csv",
      "pdf"
    ],
    "include_screenshots": true
  }
}